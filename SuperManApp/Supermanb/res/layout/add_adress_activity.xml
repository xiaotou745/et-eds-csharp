<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/layoutPadding" >



     

            <EditText
                android:hint="请输入商户名称"
                android:id="@+id/et_shopname"
                android:textColorHint="@color/text_lite"
                android:textSize="@dimen/_16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               />
      

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textColor="@color/text_black"
                android:textSize="@dimen/_18sp"
                android:layout_marginRight="@dimen/_3dp"
                android:text="区域板块" />

            <Spinner
                android:id="@+id/sp_area"
                android:layout_marginLeft="@dimen/_20dp"
                android:layout_width="wrap_content"
                android:gravity="center"
                
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </TableRow>
  

    <LinearLayout
        android:layout_marginTop="@dimen/layoutPadding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/et_detile_adr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:textSize="@dimen/_16sp"
            android:textColorHint="@color/text_lite"
            android:layout_weight="1"
            android:hint="详细地址如：南磨房路37号" />

        <Button
            android:id="@+id/btn_mark"
            android:layout_width="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/tag_shap_nor"
            android:textColor="@color/text_black"
            android:text="查看位置" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/layoutPadding"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/et_mphone"
            android:layout_width="match_parent"
            android:hint="请输入手机号"
            android:textSize="@dimen/_16sp"
            android:textColorHint="@color/text_lite"
            android:inputType="phone"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/layoutPadding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/et_telPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_16sp"
           android:textColorHint="@color/text_lite"
           android:inputType="phone"
            android:hint="座机（如果没有可以不填）"
            android:layout_gravity="bottom"
            android:layout_weight="1" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_save"
        android:layout_marginTop="@dimen/_30dp"
        android:layout_width="match_parent"
        android:background="@drawable/button_selector"
        android:textColor="@android:color/white"
        android:layout_height="wrap_content"
        android:text="保存" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40dp" />

</LinearLayout>