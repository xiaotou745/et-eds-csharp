<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_bg"
    android:orientation="vertical" >
    <TextView 
        android:id="@+id/tv_pastOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/layoutPadding"
        android:paddingTop="@dimen/_20dp"
        android:paddingBottom="@dimen/_20dp"
        android:layout_marginTop="@dimen/layoutPadding"
        android:layout_marginLeft="@dimen/layoutPadding"
        android:layout_marginRight="@dimen/layoutPadding"
        android:layout_marginBottom="@dimen/layoutPadding"
        android:drawableRight="@drawable/go"
        android:paddingRight="@dimen/layoutPadding"
        android:textSize="@dimen/_18sp"
        android:background="@drawable/bg_shap"
        android:text="已完成订单"
        android:gravity="center_vertical"
        android:textColor="@color/text_black"/>
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="@dimen/layoutPadding"
        android:paddingRight="@dimen/layoutPadding">
        <Button 
            android:id="@+id/btn_initiateOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="发起订单"
            android:layout_marginTop="@dimen/_14dp"
            android:layout_marginBottom="@dimen/_20dp"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_18sp"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:background="@drawable/button_selector"/>
        <ListView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/layoutPadding"
            android:paddingRight="@dimen/layoutPadding"
            android:layout_marginBottom="@dimen/_80dp"
            android:scrollbars="none"
            android:background="@drawable/bg_shap"
            android:id="@+id/list_order"></ListView>
       
        <TextView 
            android:id="@+id/tv_noAddress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone"
            android:textSize="@dimen/_16sp"
            android:layout_marginBottom="@dimen/_80dp"
            android:text="您还没有添加地址，	无法发单"/>
        
        
    </RelativeLayout>
    

</LinearLayout>
