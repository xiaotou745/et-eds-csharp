<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/layoutPadding" >

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </TableRow>

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layoutPadding"
        android:hint="请输入手机号"
        android:inputType="phone"
        android:maxEms="11"
        android:textColorHint="@color/text_lite"
        android:textSize="@dimen/_16sp" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layoutPadding" >

        <EditText
            android:id="@+id/et_cord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginRight="@dimen/layoutPadding"
            android:layout_weight="4"
            android:ems="6"
            android:hint="请输入验证码"
            android:inputType="number"
            android:textColorHint="@color/text_lite"
            android:textSize="@dimen/_16sp" />

        <Button
            android:id="@+id/btn_getcord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/tag_shap_nor"
            android:text="获取验证码"
            android:textColor="@color/text_black"
            android:textSize="@dimen/_18sp" />
    </TableRow>

    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layoutPadding"
        android:hint="请输入新密码（6~16位字母或数字）"
        android:inputType="textPassword"
        android:maxEms="16"
        android:textColorHint="@color/text_lite"
        android:textSize="@dimen/_16sp" />
    <EditText
        android:id="@+id/et_password2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layoutPadding"
        android:hint="请再次输入密码"
        android:inputType="textPassword"
        android:maxEms="16"
        android:textColorHint="@color/text_lite"
        android:textSize="@dimen/_16sp" />

    <Button
        android:id="@+id/btn_regist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_selector"
        android:text="提交"
        android:textColor="@android:color/white" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_10dp"
        android:orientation="horizontal" >
    </LinearLayout>

</LinearLayout>