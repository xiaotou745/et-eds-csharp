<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/layoutPadding" >

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:text="@string/chose_city"
            android:textColor="@color/text_black"
            android:textSize="@dimen/_18sp" />

        <Spinner
            android:id="@+id/sp_choose_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </TableRow>

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layoutPadding"
        android:hint="请输入手机号"
        android:inputType="phone"
        android:maxEms="11"
        android:textColorHint="@color/text_lite"
        android:textSize="@dimen/_16sp" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layoutPadding"
        android:hint="请输入密码（6~16位字母或数字）"
        android:inputType="textPassword"
        android:maxEms="16"
        android:textColorHint="@color/text_lite"
        android:textSize="@dimen/_16sp" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/layoutPadding"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/et_cord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:inputType="number"
            android:ems="6"
            android:hint="请输入验证码"
            android:textSize="@dimen/_16sp"
            android:textColorHint="@color/text_lite"
            android:layout_marginRight="@dimen/layoutPadding"
            android:layout_weight="4" />

        <Button
            android:id="@+id/btn_getcord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/tag_shap_nor"
            android:text="获取验证码"
            android:textColor="@color/text_black"
            android:textSize="@dimen/_18sp" />
    </TableRow>

    <Button
        android:id="@+id/btn_regist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_selector"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/white"
        android:text="完成注册" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_10dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_14sp"
            android:textColor="@color/text_lite"
            android:text="点击完成代表您已阅读了" />

        <TextView
            android:id="@+id/tv_agreement"
            android:layout_width="wrap_content"
            android:textSize="@dimen/_14sp"
            android:textColor="@color/text_lite"
            android:layout_height="wrap_content"
            android:text="《e代送商家服务协议》" />
    </LinearLayout>
<LinearLayout 
    android:id="@+id/btn_login"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/tag_shap_nor"
    android:layout_marginTop="@dimen/_40dp"
    android:orientation="horizontal">
    <TextView
        
        android:layout_marginTop="@dimen/_14dp"
        android:layout_marginBottom="@dimen/_14dp"
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/_20dp"
        android:layout_height="wrap_content"
        android:textColor="@color/text_lite"
        android:layout_gravity="center"
        android:textSize="@dimen/_16sp"
        android:text="注册过？" />
    <TextView
        android:layout_marginTop="@dimen/_14dp"
        android:layout_marginRight="@dimen/_20dp"
        android:layout_marginBottom="@dimen/_14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/button_bg"
        android:layout_gravity="center"
        android:textSize="@dimen/_16sp"
        android:text="点击登录" />
</LinearLayout>
 

</LinearLayout>