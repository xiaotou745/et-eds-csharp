<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/layout_bg"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/button_bg"
        android:padding="@dimen/_24dp"
        android:orientation="vertical">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_18sp"
            android:textColor="@android:color/white"
            android:text="今日已发布订单"/>
        <TableRow android:layout_width="match_parent"
             android:layout_marginTop="@dimen/_6dp"
            android:layout_height="wrap_content">
            <ImageView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_gravity="center"
                android:src="@drawable/order"
                />
            <TextView 
                android:id="@+id/tv_tody_publish_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22单"
                android:layout_marginLeft="@dimen/_10dp"
                android:layout_gravity="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_16sp"/>
            <ImageView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
               android:layout_marginLeft="@dimen/_16dp"
                android:src="@drawable/money"
                />
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单金额:"
                android:layout_marginLeft="@dimen/_6dp"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_16sp"/>
            <TextView 
                android:id="@+id/tv_tody_publish_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="358元"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_6dp"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_18sp"/>
        </TableRow>
        <View android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/_20dp"
            android:layout_marginBottom="@dimen/_20dp"
            android:layout_height="1dp"
            android:background="#25D8AA"/>
                <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_18sp"
            android:textColor="@android:color/white"
            android:text="今日已完成订单"/>
        <TableRow android:layout_width="match_parent"
             android:layout_marginTop="@dimen/_6dp"
            android:layout_height="wrap_content">
            <ImageView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_gravity="center"
                android:src="@drawable/order"
                />
            <TextView
                android:id="@+id/tv_tody_finish_count"
                 android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22单"
                android:layout_marginLeft="@dimen/_10dp"
                android:textColor="@android:color/white"
                android:layout_gravity="center"
                android:textSize="@dimen/_16sp"/>
            <ImageView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_marginLeft="@dimen/_16dp"
               android:layout_gravity="center"
                android:src="@drawable/money"
                />
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单金额:"
                android:layout_marginLeft="@dimen/_6dp"
                android:textColor="@android:color/white"
                android:layout_gravity="center"
                android:textSize="@dimen/_16sp"/>
            <TextView 
                android:id="@+id/tv_tody_finsh_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="358元"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_6dp"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_18sp"/>
        </TableRow>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/_10dp"
        android:padding="@dimen/_14dp"
        android:background="@drawable/bg_shap">
                      <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_18sp"
            android:textColor="@color/text_black"
            android:text="本月已发布订单"/>
        <TableRow android:layout_width="match_parent"
             android:layout_marginTop="@dimen/_6dp"
            android:layout_height="wrap_content">
  
            <TextView 
                android:id="@+id/tv_mouth_publish_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22单"
                android:textColor="@color/text_black"
                android:textSize="@dimen/_16sp"/>
       
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单金额:"
                android:layout_marginLeft="@dimen/_16dp"
                android:textColor="@color/text_lite"
                android:textSize="@dimen/_16sp"/>
            <TextView 
                android:id="@+id/tv_mouth_publish_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="358元"
                android:layout_marginLeft="@dimen/_6dp"
                android:textColor="#FF4700"
                android:textSize="@dimen/_18sp"/>
        </TableRow>
            <View android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/_20dp"
            android:layout_marginBottom="@dimen/_20dp"
            android:layout_height="1dp"
            android:background="#D8DDE6"/>
                                  <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_18sp"
            android:textColor="@color/text_black"
            android:text="本月已完成订单"/>
        <TableRow android:layout_width="match_parent"
             android:layout_marginTop="@dimen/_6dp"
            android:layout_height="wrap_content">
  
            <TextView 
                android:id="@+id/tv_mouth_finly_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22单"
                android:textColor="@color/text_black"
                android:textSize="@dimen/_16sp"/>
       
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单金额:"
                android:layout_marginLeft="@dimen/_16dp"
                android:textColor="@color/text_lite"
                android:textSize="@dimen/_16sp"/>
            <TextView 
                android:id="@+id/tv_mouth_finly_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="358元"
                android:layout_marginLeft="@dimen/_6dp"
                android:textColor="#FF4700"
                android:textSize="@dimen/_18sp"/>
        </TableRow>
    </LinearLayout>

</LinearLayout>
