@model Ets.Model.DomainModel.Bussiness.BusinessDetailModel
@{
    Layout = "~/Views/Shared/_LayoutNew.cshtml";
}
<link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />
<script src="~/Scripts/jquery-1.8.2.js"></script>
<script src="~/Scripts/jquery-ui-1.8.20.js"></script>
<script src="~/Scripts/jquery.ui.datepicker-zh-CN.js"></script>
<link href="~/Content/tab.css" rel="stylesheet" />
<div style="width:1000px">
    <h2 class="crumbs">
        您所在位置：商户 > 商户管理 > 绑定骑士管理 > 添加骑士绑定
    </h2>
    <table class="tbstyle222" border="0" style="font-size:14px;font-weight:bold;line-height:300%;width:900px ">
        <tr class="trclass">
            <td>商铺名称：@Model.Name</td>
            <td></td>
            <td></td>
            <td></td>
        </tr>
    </table>
    <div class="page">
        <ul class="tab">
            <li class="no"><a href="/BusinessManager/AddClienterBindManage?businessId=@Model.Id">手动绑定</a></li>
            <li ><a href="/BusinessManager/ClienterBatchBind?businessId=@Model.Id">批量绑定</a></li>
        </ul>
    </div>

    @using (Ajax.BeginForm("GetClienterList", new RouteValueDictionary { { "pageindex", "" } },
    new AjaxOptions { UpdateTargetId = "dataList", InsertionMode = InsertionMode.Replace },
    new RouteValueDictionary { { "id", "searchForm" } }))
    {
        <div class="SearchMd">
            <span class="">骑士姓名: </span>
            <input id="clienterName" type="text" name="clienterName" />
            <span class="">骑士电话: </span>
            <input id="clienterPhone" type="text" name="clienterPhone" />
            <input type="button" value="搜 索" class="searchBtn" id="btnQueryClienter" />
            <input type="hidden" id="businessId" name="businessId" value="@Model.Id" />
        </div>
    }
    <script type="text/javascript" src="/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <div style="float:left;width:900px;padding-top:30px" class="control-group" id="dataList">
        @Html.Partial("_ClienterList", Model)
    </div>
</div>
<script type="text/javascript">
    $("#btnQueryClienter").click(function () {
        var clienterPhone = $("#clienterPhone").val();
        var clienterName = $("#clienterName").val();
        var reg = /^0?1\d{10}$/;
        if (clienterName.trim().length == 0 && clienterPhone.trim().length == 0) {
            alert("请输入骑士名称或骑士电话！");
            return;
        }
        if (!reg.test(clienterPhone) && clienterPhone.trim().length > 0) {
            alert("请输入正确的手机号!");
            return;
        }
        $("#searchForm").submit();
    });
</script>
<script src="~/Scripts/mvcpager.js"></script>









