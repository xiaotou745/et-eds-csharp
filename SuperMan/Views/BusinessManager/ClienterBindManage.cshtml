@model Ets.Model.DomainModel.Bussiness.BusinessDetailModel
@{
    Layout = "~/Views/Shared/_LayoutNew.cshtml";
}
@using ETS.Enums
@using ETS.Extension
@using ETS.Util;
<link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />
<script src="~/Scripts/jquery-1.8.2.js"></script>
<script src="~/Scripts/jquery-ui-1.8.20.js"></script>
<script src="~/Scripts/jquery.ui.datepicker-zh-CN.js"></script>
<div style="width:1000px">
    <h2 class="crumbs">
        您所在位置：商户 > 商户管理 > 骑士绑定管理
    </h2>
    <table class="tbstyle222" border="0" style="font-size:14px;font-weight:bold;line-height:300%;width:900px ">
        <tr class="trclass">
            <td>商铺名称：@Model.Name</td>
            <td>商铺电话：@Model.PhoneNo</td>
            <td>商铺地址：@Model.Address</td>
            <td></td>
        </tr>
        <tr class="trclass">
            <td>已绑定骑士：@Model.BindClienterQty</td>
            <td></td>
            <td></td>
            <td></td>
        </tr>
    </table>
    @using (Ajax.BeginForm("PostClienterBindManage", new RouteValueDictionary { { "pageindex", "" } },
    new AjaxOptions { UpdateTargetId = "dataList", InsertionMode = InsertionMode.Replace },
    new RouteValueDictionary { { "id", "searchForm" } }))
    {
        <div class="SearchMd">
            <input type="button" value="添加骑士绑定" class="searchBtn" id="btnBindClienter" />
            @*<input type="button" value="导 出" class="searchBtn" id="btnExportBalanceRecord" onclick=" return funExport() " />*@
        </div>
    }
    <script type="text/javascript" src="/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <div style="float:left;width:900px;padding-top:30px" class="control-group" id="dataList">
        @Html.Partial("_ClienterBindList", Model)
    </div>
</div>
<script type="text/javascript">
    var adminjs = new adminglass(); //实例化后台类
    $(document).ready(function () {
        $('#operateTimeStart').datepicker();
        $('#operateTimeEnd').datepicker();
        window.location.hash = '';
    });

    function funExport() {
        var businessId = $("#businessId").val();
        var recordType = $("#recordType").val();
        var relationNo = $("#relationNo").val();
        var operateTimeStart = $("#operateTimeStart").val();
        var operateTimeEnd = $("#operateTimeEnd").val();
        if (operateTimeStart == "" || operateTimeEnd == "") {
            alert("请输入时间范围!");
            return;
        }
        var url = "/BusinessManager/ExportBusinessBalanceRecord?businessId=" + businessId + "&recordType=" + recordType + "&relationNo=" + relationNo + "&operateTimeStart=" + operateTimeStart + "&operateTimeEnd=" + operateTimeEnd;
        window.location.href = url;
        return true;
    }
    //关闭弹层
    $('.J_closebox').click(function () {
        adminjs.closewinbox('.add-openbox');
        return false;
    });
</script>
<script src="~/Scripts/mvcpager.js"></script>









