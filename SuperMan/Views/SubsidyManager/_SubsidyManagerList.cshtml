@model Ets.Model.DomainModel.Subsidy.SubsidyManageList
@using Ets.Service.Provider.User
<div>
    <h4 style="color:black;font-weight:600">补帖设置记录</h4>
    <table width="100%" border="0" cellspacing="0" cellpadding="0" class="tbstyle">
        <thead>
            <tr class="tdbg">
                <th width="%5">序号</th>
                <th>订单佣金(%)</th>
                <th>网站补贴</th>
                <th>开始日期</th>
                <th>结束日期</th>
                <th>所属集团</th>
                @*<th>每公里费用</th>
                    <th>订单类型</th>*@
            </tr>
        </thead>
        <tbody>
            @{
                var i = 0;
                foreach (var item in Model.subsidyModel)
                {
                    i++;
                    <tr>
                        <td>@i</td>
                        <td>@(item.OrderCommission.Value * 100)</td>
                        <td>@item.WebsiteSubsidy</td>
                        <td>@item.StartDate.Value.ToShortDateString()</td>
                        <td>@item.EndDate.Value.ToShortDateString()</td>
                        <td>
                            @if (item.GroupId != null) //当前商户有集团信息
                            {
                                @Html.Raw(new BusinessProvider().GetGroupNameById(Convert.ToInt32(item.GroupId)))
                            }
                        </td>
                        @*<td>@item.PKMCost</td>

                                    @{
                            var orderTypeName = "";
                            if (item.OrderType == 1)
                            {
                                orderTypeName = "送餐";
                            }
                            else if (item.OrderType == 2)
                            {
                                orderTypeName = "收餐具";
                            }
                            else
                            {
                                orderTypeName = "";
                            }
                            <td>@orderTypeName</td>
                                    }*@
                    </tr>
                }
            }
        </tbody>
</table>
 @Html.Partial("_NewPager", Model.PagingResult)
   

