@model ETS.Data.PageData.PageInfo<Ets.Model.DataModel.Clienter.ClienterListModel>
@using Ets.Model.DomainModel.Clienter;
@using SuperManBusinessLogic.CommonLogic;
@using SuperManBusinessLogic.Group_Logic;
